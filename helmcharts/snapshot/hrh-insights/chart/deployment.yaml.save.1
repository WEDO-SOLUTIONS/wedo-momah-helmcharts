apiVersion: apps/v1
kind: Deployment
metadata:
  name: hrh-insights
  namespace: urbi
  labels:
    app.kubernetes.io/instance: hrh-insights
    app.kubernetes.io/managed-by: Helm
    app.kubernetes.io/name: hrh-insights
    app.kubernetes.io/version: production
    helm.sh/chart: hrh-insights-0.1.0
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/instance: hrh-insights
      app.kubernetes.io/name: hrh-insights
  template:
    metadata:
      labels:
        app.kubernetes.io/instance: hrh-insights
        app.kubernetes.io/managed-by: Helm
        app.kubernetes.io/name: hrh-insights
        app.kubernetes.io/version: production
        helm.sh/chart: hrh-insights-0.1.0
    spec:
      containers:
        - name: hrh-insights
          image: registry.momrah.gov.sa/urbi-omar/hrh-insights:v1.1.4
          ports:
            - containerPort: 8001
              protocol: TCP
          resources:
            limits:
              cpu: "2"
              memory: "2Gi"
            requests:
              cpu: "500m"
              memory: "512Mi"
          livenessProbe:
            httpGet:
              path: /health
              port: 8001
            initialDelaySeconds: 30
            periodSeconds: 20
            timeoutSeconds: 3
            failureThreshold: 6
            successThreshold: 1
          readinessProbe:
            httpGet:
              path: /health
              port: 8001
            initialDelaySeconds: 10
            periodSeconds: 10
            timeoutSeconds: 3
            failureThreshold: 6
            successThreshold: 1
          # --- Environment variables removed ---
          # --- They will be baked into the Docker image ---
      restartPolicy: Always
      terminationGracePeriodSeconds: 30
      dnsPolicy: ClusterFirst
      securityContext: {}
      schedulerName: default-scheduler
